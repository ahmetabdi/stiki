<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid well">
      <h2>New Page in <%= @space.name %></h2>
    </div>
          
    <div class="row-fluid">
      <%= form_tag( stiki.space_pages_path(@space), :html => {:class => 'form-horizontal'} ) do |f| %>
        <fieldset class="well">
          
          <%- if @page.errors %>
            <div class="control-group error">
              <%- @page.errors.full_messages.each do |error| %>
                <div class="error help-block">
                  <%= error %>
                </div>
              <% end -%>
            </div>
          <% end -%>
          
          <div class="control-group">
              <%= label_tag 'title', 'Title', :class => "control-label" %>
              <div class="controls">
                <input class="field input-xlarge span8" id="title" name="page[title]"  value="<%= @page.title %>" size="30" type="text">
              </div>
              <%= label_tag 'body', 'Body', :class => "control-label" %>
              <div class="controls">
                <textarea class="field input-xlarge span8" id="body" name="page[body]" rows="20"><%= @page.body %></textarea>
              </div>
          </div>
          <div class="form-actions">
            <%= submit_tag "Create", :class => "btn btn-primary" %>
          </div>
        </fieldset>
        <% end -%>
    </div>
  </div>
</div>